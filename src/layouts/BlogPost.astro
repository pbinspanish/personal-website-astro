---
import BaseCenteredTitle from "../components/BaseCenteredTitle.astro";

import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];

const { title, date, language, tags, draft } = Astro.props;
---

<BaseCenteredTitle title={title} lang={language}>
  <!-- Metadata -->
  <div
    class={(date === undefined ? "hidden" : "") +
      " text-base-600 dark:text-base-500 mb-12"}
  >
    {
      date === undefined
        ? ""
        : date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
    }
  </div>

  <!-- Content -->
  <div
    id="content"
    class="mb-12 text-justify text-lg/6 text-pretty hyphens-auto md:text-xl/7"
  >
    <slot />
  </div>
</BaseCenteredTitle>
