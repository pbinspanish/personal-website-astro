---
import BaseCentered from "../components/BaseCentered.astro";

interface Props {
  title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<BaseCentered page_title={title} lang={lang}>
  <!-- Title -->
  <h1 class="mt-12 mb-6 text-4xl font-bold">{title}</h1>

  <slot />
</BaseCentered>
